{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "OpenWeatherCommunication": {
    "BaseAddress": "http://api.openweathermap.org",
    "CityEndPoint": "data/2.5/weather?q={0}&appid={1}",
    "LatLonEndPoint": "data/2.5/weather?lat={0}&lon={1}&appid={2}",
    "HistoricEndPoint": "data/2.5/onecall?lat={0}&lon={1}&exclude=hourly,minutely&appid={2}"
  } 
}
